<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginLeft="@dimen/option_card_horizontal_margin"
    android:layout_marginRight="@dimen/option_card_horizontal_margin"
    android:layout_marginTop="@dimen/option_card_vertical_margin"
    android:layout_marginBottom="@dimen/option_card_vertical_margin"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/option_padding"
        android:paddingRight="@dimen/option_padding"
        android:paddingLeft="@dimen/option_padding"
        android:paddingBottom="@dimen/option_padding"
        android:textSize="@dimen/list_item_text_size"
        android:text="@string/option_placeholder_text"
        />

</android.support.v7.widget.CardView>